--- a/styles.css
+++ b/styles.css
@@ -330,50 +330,180 @@ body {
 #themeToggle:focus-visible {
   outline: none;
   box-shadow: var(--ring);
 }
 
 .simple-page {
   min-height: 70vh;
   max-width: 720px;
   margin: 0 auto;
   padding: clamp(2.5rem, 10vw, 5rem) 1.5rem;
   text-align: center;
   display: flex;
   flex-direction: column;
   gap: 1rem;
 }
 
 .simple-page p {
   color: var(--muted);
 }
 
 .simple-page a {
   color: var(--brand);
   font-weight: 600;
 }
 
+.history-page {
+  min-height: 70vh;
+  max-width: 1100px;
+  margin: 0 auto;
+  padding: clamp(2.5rem, 8vw, 5rem) 1.5rem;
+  display: flex;
+  flex-direction: column;
+  gap: clamp(2rem, 6vw, 4rem);
+  text-align: left;
+}
+
+.history-hero {
+  display: flex;
+  flex-direction: column;
+  gap: 0.75rem;
+}
+
+.history-hero .eyebrow {
+  text-transform: uppercase;
+  letter-spacing: 0.25em;
+  font-size: 0.75rem;
+  color: var(--muted);
+}
+
+.history-hero p {
+  color: var(--muted);
+}
+
+.history-story {
+  display: grid;
+  grid-template-columns: minmax(0, 1.2fr) minmax(0, 0.8fr);
+  gap: clamp(1.5rem, 4vw, 3rem);
+  align-items: start;
+}
+
+.history-story-text {
+  display: flex;
+  flex-direction: column;
+  gap: 1.75rem;
+}
+
+.history-story-text h2 {
+  margin-bottom: 0.35rem;
+}
+
+.history-story-text p {
+  color: var(--muted);
+}
+
+.history-gallery {
+  display: grid;
+  gap: 1.5rem;
+}
+
+.history-gallery figure {
+  background: var(--card);
+  border-radius: 1.25rem;
+  overflow: hidden;
+  box-shadow: 0 20px 45px rgba(12, 16, 26, 0.18);
+}
+
+.history-gallery img {
+  width: 100%;
+  height: auto;
+  display: block;
+}
+
+.history-timeline {
+  display: flex;
+  flex-direction: column;
+  gap: 1.5rem;
+}
+
+.timeline-header p {
+  color: var(--muted);
+}
+
+.timeline-scroll {
+  max-height: 360px;
+  overflow-y: auto;
+  padding: 1.25rem;
+  border-radius: 1.25rem;
+  border: 1px solid rgba(255, 255, 255, 0.08);
+  background: rgba(15, 25, 40, 0.6);
+  box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.04);
+}
+
+.timeline-list {
+  list-style: none;
+  margin: 0;
+  padding: 0;
+  display: grid;
+  gap: 1.25rem;
+}
+
+.timeline-list li {
+  display: grid;
+  gap: 0.5rem;
+  padding-bottom: 1.25rem;
+  border-bottom: 1px solid rgba(255, 255, 255, 0.08);
+}
+
+.timeline-list li:last-child {
+  border-bottom: none;
+  padding-bottom: 0;
+}
+
+.timeline-year {
+  font-weight: 700;
+  color: var(--brand);
+  letter-spacing: 0.08em;
+  text-transform: uppercase;
+  font-size: 0.85rem;
+}
+
+.timeline-list p {
+  color: var(--muted);
+  margin: 0;
+}
+
+@media (max-width: 900px) {
+  .history-story {
+    grid-template-columns: 1fr;
+  }
+
+  .timeline-scroll {
+    max-height: none;
+  }
+}
+
 @media (max-width: 1300px) {
   :root {
     --header-height: 210px;
   }
   .nav {
     flex-direction: column;
     align-items: stretch;
     padding: 1rem 1.25rem;
     row-gap: .5rem;
     position: relative;
   }
 
   .nav-top {
     display: grid;
     grid-template-columns: 1fr auto 1fr;
     align-items: center;
   }
 
   .nav-inner {
     display: grid;
     grid-template-columns: 1fr;
     justify-items: center;
     row-gap: 1rem;
     max-width: none;
   }
