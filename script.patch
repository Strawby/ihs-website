+
+    heroMedia?.classList.toggle("hero-media--static", shouldHideVideo);
+
+    if (shouldHideVideo) {
+      if (!heroVideo.paused) heroVideo.pause();
+    } else if (heroVideo.paused) {
+      heroVideo.play().catch(() => {});
